<UserControl x:Class="APP.UserControls.MyCheckbox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" Name="myCheckBox"  >
    <StackPanel Orientation="Horizontal">

        <Button Style="{StaticResource button}">
            <fa:ImageAwesome Icon="{Binding Path=Icon,ElementName=myCheckBox}"
                         Width="25" Height="15" Foreground="White"></fa:ImageAwesome>
        </Button>

        <TextBlock Text="{Binding Path=Text, ElementName=myCheckBox}"
               Foreground="#363636" VerticalAlignment="Center" Margin="10 0 20 0" FontWeight="SemiBold"></TextBlock>

    </StackPanel>
</UserControl>
